<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <h1 class="text-center mb-4">Login</h1>

      <%= form_for :sessions, url: login_path, html: { class: "form" } do |f| %>
        <div class="form-group mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.text_field :email, required: true, autofocus: true, placeholder: "Enter your email", class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, required: true, placeholder: "Enter your password", class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit "Login", class: "btn btn-info w-100" %>
        </div>
      <% end %>

      <p class="text-center mt-3">
        <%= link_to "Sign up now!", signup_path, class: "signup-link" %>
      </p>
    </div>
  </div>
</div>

