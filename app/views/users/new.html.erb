<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, html: { class: "form-horizontal" } do|f| %>
      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, autofocus: true, required: true, class: "form-control", placeholder: "Enter your name" %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, required: true, class: "form-control", placeholder: "Enter your email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, required: true, class: "form-control", placeholder: "Enter your password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Confirm your password" %>
      </div>

      <div class="form-group">
        <%= f.submit "Register", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
