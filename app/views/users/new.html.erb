<% provide(:title, 'Sign up') %>
<h1 class="text-center mb-4">Sign up</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= form_for @user, html: { class: "form" } do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, autofocus: true, required: true, class: "form-control", placeholder: "Enter your name" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, required: true, class: "form-control", placeholder: "Enter your email" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, required: true, class: "form-control", placeholder: "Enter your password" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
          <%= f.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Confirm your password" %>
        </div>

        <div class="text-center">
          <%= f.submit "Register", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <p class="text-center mt-3">
        <%= link_to "Login now!", login_path, class: "signin-link" %>
      </p>
    </div>
  </div>
</div>
